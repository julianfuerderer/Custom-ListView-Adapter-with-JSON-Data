<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilAnsehen" >

    <TextView
        android:id="@+id/textViewBenutzername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewMitgliedId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewBenutzername"
        android:layout_below="@+id/textViewBenutzername"
        android:layout_marginTop="21dp"
        android:text="TextView"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textViewMitgliedId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:minHeight="170dip"
        android:minWidth="170dip"
        android:scaleType="center" />

</RelativeLayout>
